<%= form_for(@league) do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
          <%= f.label :private %>
          <%= f.check_box :private %>
    </div>
    <div>
        <%=  f.label :member_limit  %>
        <%=  f.number_field :member_limit %>
    </div>
    <div>
          <%= f.label :capital %>
          <%= f.text_field :capital %>
    </div>
    <div>
        <%= f.label :commission %>
        <%= f.text_field :commission %>
    </div>
    <div>
        <%= f.label :margin %>
        <%= f.text_field :margin  %>
    </div>

    <div>
      <%= f.label :start_date %>
      <%= f.date_select :start_date %>
    </div>
    <div>
      <%= f.label :end_date %>
      <%= f.date_select :end_date %>
    </div>

    <div>
        <%= f.submit "Create my league", class: "btn btn-large btn-primary" %>
    </div>

<% end  %>