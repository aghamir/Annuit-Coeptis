    */
    
    google.load('feeds', '1');
    
    function OnLoad() {
      var feeds = [
        {
          title: 'U.S. Markets',
          url: 'http://feeds.finance.yahoo.com/rss/2.0/category-stocks?region=US&lang=en-US'
        },
        {
          title: 'Investing Picks',
          url: 'http://feeds.finance.yahoo.com/rss/2.0/category-ideas-and-strategies?region=US&lang=en-US'
        },
        {
          title: 'Investing Strategies',
          url: 'http://feeds.finance.yahoo.com/rss/2.0/category-ideas-and-strategies?region=US&lang=en-US'
        }
      ];
    
      var options = {
        stacked : true,
        horizontal : false,
        title : "Financial News"
      };
    
      new GFdynamicFeedControl(feeds, 'content', options);
      document.getElementById('content').style.width = "1oo%";
    }
    
    google.setOnLoadCallback(OnLoad);
    </script>
